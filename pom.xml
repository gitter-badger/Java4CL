<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>Java4CL</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Java4CL</name>
  <description>An API4KB compliant API for CL2 texts.</description>
  <build>
    <resources>
      <resource>
        <directory>"src/api4kb/main/java"</directory>
      </resource>
      <resource>
        <directory>src/cl2/main/java</directory>
      </resource>
      <resource>
        <directory>src/api4kb/test</directory>
      </resource>
      <resource>
        <directory>src/cl2/test</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <scm>
  	<url>https://github.com/ag-csw/Java4CL</url>
  	<developerConnection>Tara Athan, Ralph Schaefermeier</developerConnection>
  </scm>
  <issueManagement>
  	<url>https://github.com/ag-csw/Java4CL/issues</url>
  	<system>GitHub</system>
  </issueManagement>
  <organization>
  	<name>Freie Universitaet Berlin, Athan Services</name>
  </organization>
  <dependencies>
  	<dependency>
  		<groupId>org.slf4j</groupId>
  		<artifactId>slf4j-api</artifactId>
  		<version>1.7.7</version>
  	</dependency>
  	<dependency>
	  <groupId>dom4j</groupId>
	  <artifactId>dom4j</artifactId>
	  <version>1.6.1</version>
    </dependency>  	
  	<dependency>
  		<groupId>org.slf4j</groupId>
  		<artifactId>slf4j-log4j12</artifactId>
  		<version>1.7.7</version>
  	</dependency>
  </dependencies>
  <groupId>de.fuberlin.csw.cl</groupId>
</project>